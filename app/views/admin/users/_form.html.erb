<%= form_for(user, url: (url.present? ? url : user)) do |f| %>
  <% if user.errors.any? %>
    <article class="alert alert-danger">
      <%= user.errors.count %>
      error(es) no permiten guardar este usuario:
      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </article>
  <% end %>

  <fieldset class="form-group">
    <%= f.label :name, 'Nombre' %>
    <%= f.text_field :name,
        class: 'form-control' %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :email, 'Correo electr칩nico' %>
    <%= f.text_field :email,
        class: 'form-control' %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :password, 'Contrase침a' %>
    <%= f.text_field :password,
        class: 'form-control' %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :password_confirmation,
       'Confirmaci칩n de contrase침a'%>
    <%= f.text_field :password_confirmation,
        class: 'form-control' %>
  </fieldset>

  <% if user != current_user %>
  <fieldset class="form-group">
    <%= f.label :role, 'Permisos' %>
    <%= f.select :role, role_options, {},
        class: 'form-control' %>
  </fieldset>
  <% end %>

  <div class="actions">
    <%= f.submit 'Guardar',
        class: 'btn btn-primary' %>
  </div>
<% end %>
